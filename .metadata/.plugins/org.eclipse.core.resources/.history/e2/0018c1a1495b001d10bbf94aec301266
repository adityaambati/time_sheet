package com.ryben.timesheet.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.ryben.timesheet.model.ResponseDTO;
import com.ryben.timesheet.repository.EventsDAO;

@RestController
@RequestMapping("/events")
public class EventController {

    @Autowired
    private EventsDAO eventsDAO;

    @PostMapping("/save")
    public ResponseDTO saveEvent(@ResponseBody Events event) {

        return eventsDAO.saveEvent(event);
    	
    }
}
